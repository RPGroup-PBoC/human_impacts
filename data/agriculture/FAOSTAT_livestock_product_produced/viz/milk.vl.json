{   "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": "container",
    "height": 300,
    "padding": 5,
    "data": {
          "url": "https://raw.githubusercontent.com/RPGroup-PBoC/human_impacts/master/data/agriculture/FAOSTAT_livestock_product_produced/processed/FAOSTAT_livestock_and_product.csv"},
    "mark":   
    {"type": "line",
    "point": true},
    "transform": [
      {"filter": "datum.subcategory == 'dairy (milk)'"}
    ],
    "encoding": {
      "x": {
        "field": "year",
        "timeUnit": "year",
        "title": "year"
      },
      "y": {
        "field": "mass_produced_Mt",
        "type": "quantitative",
        "title": "milk produced [megatonnes]"
      },
      "color": "dodgerblue",
      "tooltip": [
          {"field": "mass_produced_Mt", "title": "production mass [Mt]", "format": "0.0f"},
          {"field": "year", "timeUnit": "year", "title": "year"}]

    }
}